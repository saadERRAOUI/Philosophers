#######################################################
# VARS     	 										  #
#######################################################
NAME = philosophers

CC = cc

CFLAGS = -Wall -Wextra -Werror

#######################################################
# MANDATORY     									  #
#######################################################
SOURCES = philosophers.c

OBJECTS = $(SOURCES:.c=.o)

#######################################################
# OPERATIONS 										  #
#######################################################
all: $(NAME)

clean:
	rm -f $(OBJECTS)

fclean: clean
	rm -f $(NAME)

re: fclean all